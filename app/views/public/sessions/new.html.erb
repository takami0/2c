
<div class="container">

  <div class="row">
    <div class="col-lg-4"> <h2>ログイン</h2> </div>
    <div class="col-lg-4"> <%= render "public/shared/header"%> </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= render "layouts/flash"%><br> <!--エラーメッセージ-->
      <table class= "table-striped">
        <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
        <tr>
          <th><%= f.label :email, "メールアドレス：" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30, placeholder: "メールアドレスを入力ください"%></td>
        </tr>
        <tr>
          <th><%= f.label :password, "パスワード：" %></th>
          <td><%= f.password_field :password, autocomplete: "current-password", size: 30,placeholder: "パスワードを入力ください" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン" , class: "btn-success" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "ログイン（ゲスト）", user_session_guest_path, method: :post %></td>
        </tr>
        <%end%>
      </table>
    </div>
  </div>

</div>

  <%# if devise_mapping.rememberable? %>
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
  <%#end%>