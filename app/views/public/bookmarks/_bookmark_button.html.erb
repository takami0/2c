
<% if post.user != current_user %>

  <% if post.bookmarked_by?(current_user) %>
    <%= link_to "ブックマークを外す", public_post_bookmark_path(post.id), method: :delete, remote: true %><br>
  <%else%>
    <%= link_to "ブックマーク", public_post_bookmark_path(post.id), method: :post, remote: true %><br>
  <%end%>

<%end%>