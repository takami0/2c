<%= render "public/shared/header" %>

<h1>ユーザ詳細画面</h1>

<%= image_tag @user.get_icon(200,200) %><br>
ユーザー名：<%= @user.name %><br>
カテゴリ（媒体）：<%= @user.category_medium.name %><br>
職業：<%= @user.occupation.name %><br>

<% if current_user != @user %>
  <% if current_user.user_relationships.exists?(follow_user_id: @user.id) %>
    <%= link_to "フォロー解除", public_user_follow_path(@user.id), method: :delete %>
  <%else%>
    <%= link_to "フォロー", public_user_follow_path(@user.id), method: :post %>
  <%end%>
<%end%>
