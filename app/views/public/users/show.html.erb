<h1>ユーザ詳細画面</h1>

<% if current_user != @user %>
  <% if current_user.user_relationships.exists?(follow_user_id: @user.id) %>
    <%= link_to "フォロー解除", public_user_follow_path(current_user.id), method: :delete %>
  <%else%>
    <%= link_to "フォロー", public_user_follow_path(current_user.id), method: :post %>
  <%end%>
<%end%>
