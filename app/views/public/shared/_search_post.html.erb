    <th>スタイル：<%= f.collection_select :category_style_id, CategoryStyle.all, :id, :name, prompt: "制作スタイルを選択ください" %></th>
    <td>
      <%= f.text_field :word %>
      <%= f.hidden_field :subject, :value => "投稿_スタイル別" %>
      <%= f.submit "検索" %>
    </td>
    <%end%>
  </tr>

</table>