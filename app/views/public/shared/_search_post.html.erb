
<h4>-<投稿検索>-</h4>
<table class= "table-bordered">

  <!--検索対象：媒体-->
  <tr>
    <%= form_with url: public_search_path, method: :get do |f| %>
    <th>媒体：<%= f.collection_select :category_medium_id, CategoryMedium.all, :id, :name, prompt: "制作媒体を選択ください" %></th>
    <td>
      <%= f.text_field :word %>
      <%= f.hidden_field :subject, :value => "投稿_媒体別" %>
      <%= f.submit "検索" %>
    </td>
    <%end%>
  </tr>

  <!--検索対象：モチーフ-->
