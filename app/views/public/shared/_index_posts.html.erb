
<% posts.each do |_post| %>
  <% if _post.user.valid_status == true && _post.user.display_status != false %>
    <div class="row">
      <div class="col-lg-3"><%= link_to (image_tag _post.get_image(150, 150)), public_post_path(_post.id) %></div>
      <div class="col-lg-3">
        Title: <%= _post.title %><br>
        投稿者：<%= link_to _post.user.name, public_user_path(_post.user.id) %>
      </div>
    </div>
  <%end%>
<%end%>
