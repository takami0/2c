<!--Top画面-->
<%= link_to public_top_path do %>
  <i class="fa-sharp fa-solid fa-house fa-2x"></i>
<%end%>
<!--ユーザ一覧-->
<%= link_to public_users_path do %>
  <i class="fa-solid fa-users fa-2x"></i>
<%end%>
<!--投稿一覧-->
<%= link_to public_posts_path do %>
  <i class="fa-sharp fa-solid fa-comments fa-2x"></i>
<%end%>

<% if user_signed_in? %>
  <!--ログインuser：会員-->
  <% if current_user.member_status == 1 %>
    <!--新規投稿-->
    <%= link_to new_public_post_path do %>
      <i class="fa-solid fa-arrow-up-right-from-square fa-2x"></i>
    <%end%>
    <!--通知-->
    <%= link_to public_user_notifications_path(current_user.id) do %>
      <% if current_user.received_notifications.present? %>
        <i class="fa-solid fa-bell fa-2x"></i>
      <%else%>
        <i class="fa-regular fa-bell fa-2x"></i>
      <%end%>
    <%end%>
    <!--ログアウト-->
    <%= link_to destroy_user_session_path, class: "btn-danger", method: :delete do%>
      <i class="fa-solid fa-person-walking-dashed-line-arrow-right fa-2x"></i>
    <%end%>
    <!--マイページ-->
    <%= link_to public_user_path(current_user.id) do %>
      <i class="fa-solid fa-user fa-2x"></i>
    <%end%>

  <!--ログインuser：ゲスト-->
  <% elsif user_signed_in? && current_user.member_status == 2 %>
    <!--新規登録画面（ゲストログイン済み）-->
    <%= link_to public_guest_destroy_path, method: :delete do %>
      <i class="fa-solid fa-user-plus fa-2x"></i>
    <%end%>
  <%end%>
<%else%>
  <!--新規登録画面（未ログイン）-->
  <%= link_to new_user_registration_path do %>
    <i class="fa-solid fa-user-plus fa-2x"></i>
  <%end%>
  <!--ログイン画面-->
  <%= link_to new_user_session_path do %>
    <i class="fa-solid fa-person-walking-arrow-right fa-2x"></i>
  <%end%>
<%end%>