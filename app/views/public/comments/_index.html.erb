
  <!--コメント表示(降順)-->
  <% if comments.present? %>
    <% comments.each do |comment| %>
      <table class= "table-bordered">
        <tr>
          <th>
            <%= link_to image_tag(comment.user.get_icon(50, 50)), user_path(comment.user.id) %><br>
            <%= comment.user.name %>
          </th>
          <td>
            <%= l comment.created_at, format: :times %><br>
            <%= comment.content %>
            <!--コメント削除-->
            <% if comment.user.id == current_user.id %>
              <%= link_to post_comment_path(post.id, comment.id), method: :delete, remote: true do %>
                <i class="fas fa-trash"></i>
              <%end%>
            <%end%>
          </td>
        </tr>
      </table>
    <%end%>
  <%else%>
    <h6>-コメントはまだありません-</h6>
  <%end%>
