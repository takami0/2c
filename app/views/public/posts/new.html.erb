<%= render "public/shared/header" %>

<h1>新規投稿画面</h1>

<%= form_with model: @post, url: public_posts_path(@post.id), method: :post do |f|%>
  <%= f.label :image, "ファイル" %>
  <%= f.file_field :image %><br>

  <%= f.label :category_medium_id, "製作媒体" %>
  <%= f.collection_select :category_medium_id, CategoryMedium.all, :id, :name, prompt: "制作媒体を選択ください" %><br>
  <%= f.label :category_motif_id, "モチーフ" %>
  <%= f.collection_select :category_motif_id, CategoryMotif.all, :id, :name, prompt: "モチーフを選択ください" %><br>
  <%= f.label :category_style_id, "スタイル" %>
  <%= f.collection_select :category_style_id, CategoryStyle.all, :id, :name, prompt: "スタイルを選択ください" %><br>

  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %><br>
  <%= f.label :introduction, "紹介文" %>
  <%= f.text_area :introduction %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "投稿" %>
<%end%>
