<%= render "public/shared/header" %>

<h1>新規投稿画面</h1>

<%= form_with model: @post, url: public_posts_path(@post.id), method: :post do |f|%>
  <%= f.label :image, "ファイル" %>
  <%= f.file_field :image %><br>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %><br>
  <%= f.label :introduction, "紹介文" %>
  <%= f.text_area :introduction %><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.submit "投稿" %>
<%end%>
