
<div class="container">

  <h1>カテゴリ（媒体）編集画面</h1>
  <%= render partial: "admin/shared/header"%>

  <div class="row">
    <div class="col-lg-4">
      <%= "編集する〈媒体〉：#{@medium.name}"%>
    </div>
  </div>

  <%= form_with model: @medium, url: admin_category_medium_path(@medium.id), method: :patch do |f|%>
    <%= render 'layouts/error_messages', resource: @medium %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name%>
        <%= f.submit "更新"%>
        <%= link_to "削除",  admin_category_medium_path(@medium.id), method: :delete, class: "btn-danger", data: {confirm: "本当に削除しますか？"} %>
      </div>
  </div>
  <%end%>

</div>