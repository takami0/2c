
<div class="container">
  <h1>カテゴリ（媒体）管理画面</h1>
  <%= render partial: "admin/shared/header" %>


  <h3>新規作成フォーム</h3>
  <%= form_with model: @medium_new, url: admin_category_media_path, method: :post do |f|%>
  <div class="row">
    <div class="col-lg-4">
      <%= f.text_field :name %>
      <%= f.submit "作成", class: "btn-success"%>
    </div>
  </div>
  <%end%>

  <br>
  <h3>カテゴリ（媒体）一覧</h3>
  <% @media.each do |medium|%>
  <div class="row">
    <div class="col-lg-2"><%= medium.name %></div>
    <div class="col-lg-2"><%= link_to "編集",  edit_admin_category_medium_path(medium.id) %></div>
  </div>
  <%end%>

</div>
