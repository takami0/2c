
<div class="container">

  <h1><制作スタイル> 編集画面</h1>
  <%= render partial: "admin/shared/header"%>

  <div class="row">
    <div class="col-lg-4">
      <%= "編集する〈制作スタイル〉：#{@style.name}"%>
    </div>
  </div>

  <%= form_with model: @style, url: admin_category_style_path(@style.id), method: :patch do |f|%>
    <%= render 'layouts/error_messages', resource: @style %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name%>
        <%= f.submit "更新", class: "btn-success"%>
        <%= link_to "削除",  admin_category_style_path(@style.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
      </div>
    </div>
  <%end%>

</div>
