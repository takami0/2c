
<div class="container">

  <%= render partial: "admin/shared/header" %>

  <div class="row">
    <div class="col-lg-6"> <h2>カテゴリ管理画面：モチーフ</h2> </div>
  </div>

  <div class="row">
    <div class="col-lg-6">

    <!--新規作成フォーム-->
    <br>
    <%= form_with model: @new_motif, url: admin_category_motifs_path, method: :post do |f|%>
    <%= render 'layouts/error_messages', resource: @new_motif %>
    <table class= "table-striped">
      <tr>
        <th>新規作成フォーム</th>
        <td><%= f.text_field :name, placeholder: "追加するカテゴリを入力ください", size: 30 %></td>
        <td><%= f.submit "作成", class: "btn-success"%></td>
      </tr>
    </table>
    <%end%>

    <br>
    <table class= "table-striped">
      <tr>
        <th>モチーフ（一覧）</th>
        <td></td>
      </tr>
      <% @motifs.each do |motif|%>
      <tr>
        <td><%= "・#{motif.name}" %></td>
        <td><%= link_to "編集",  edit_admin_category_motif_path(motif.id) %></td>
      </tr>
      <%end%>
    </table>
    <%= paginate @motifs %>
    </div>
  </div>

</div>