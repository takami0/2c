
<div class="container">

  <h1><制作モチーフ> 編集画面</h1>
  <%= render partial: "admin/shared/header"%>

  <div class="row">
    <div class="col-lg-4">
      <%= "編集する〈制作モチーフ〉：#{@motif.name}"%>
    </div>
  </div>

  <%= form_with model: @motif, url: admin_category_motif_path(@motif.id), method: :patch do |f|%>
    <%= render 'layouts/error_messages', resource: @motif %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name%>
        <%= f.submit "更新", class: "btn-success"%>
        <%= link_to "削除",  admin_category_motif_path(@motif.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
      </div>
    </div>
  <%end%>

</div>