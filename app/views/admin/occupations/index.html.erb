
<div class="container">

  <%= render partial: "admin/shared/header" %>

  <div class="row">
    <div class="col-lg-6"> <h2><職業> 管理画面</h2> </div>
  </div>

  <div class="row">
    <div class="col-lg-6">

    <!--新規作成フォーム-->
    <br>
    <%= form_with model: @new_occupation, url: admin_occupations_path, method: :post do |f|%>
    <%= render 'layouts/error_messages', resource: @new_occupation %>
    <table class= "table-striped">
      <tr>
        <th>新規作成フォーム</th>
        <td><%= f.text_field :name, placeholder: "追加する<職業>を入力ください", size: 30 %></td>
        <td><%= f.submit "作成", class: "btn-success"%></td>
      </tr>
    </table>
    <%end%>

    <br>
    <table class= "table-striped">
      <tr>
        <th>職業（一覧）</th>
        <td></td>
      </tr>
      <% @occupations.each do |occupation|%>
      <tr>
        <td><%= "・#{occupation.name}" %></td>
        <td><%= link_to "編集",  edit_admin_occupation_path(occupation.id) %></td>
      </tr>
      <%end%>
    </table>
    <%= paginate @occupations %>
    </div>
  </div>

</div>