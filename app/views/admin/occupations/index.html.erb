
<div class="container">
  <h1><職業> 管理画面</h1>
  <%= render partial: "admin/shared/header"%>

  <h3>新規作成フォーム</h3>
  <%= form_with model: @new_occupation, url: admin_occupations_path, method: :post do |f|%>
    <%= render 'layouts/error_messages', resource: @new_occupation %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name %>
        <%= f.submit "新規作成", class: "btn-success" %>
      </div>
    </div>
  <%end%>

  <br>
  <h3><職業> 一覧</h3>
  <% @occupations.each do |occupation|%>
  <div class="row">
    <div class="col-lg-2"><%= occupation.name %></div>
    <div class="col-lg-2"><%= link_to "編集", edit_admin_occupation_path(occupation.id) %></div>
  </div>
  <%end%>

</div>






