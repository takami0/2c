
<div class="container">

  <h1>[編集画面] 職業</h1>
  <%= render "admin/shared/header"%>

  <div class="row">
    <div class="col-lg-4">
      <%= "編集する〈職業〉：#{@occupation.name}"%>
    </div>
  </div>

  <%= form_with model: @occupation, url: admin_occupation_path(@occupation.id), method: :patch do |f|%>
  <div class="row">
    <div class="col-lg-4">
      <%= f.text_field :name %>
      <%= f.submit "更新" %>
    </div>
  </div>
  <%end%>

</div>
