
<div class="container">

  <h1>[編集画面] 職業</h1>
  <%= render partial: "admin/shared/header"%>

  <div class="row">
    <div class="col-lg-4">
      <%= "編集する〈職業〉：#{@occupation.name}"%>
    </div>
  </div>

  <%= form_with model: @occupation, url: admin_occupation_path(@occupation.id), method: :patch do |f|%>
    <%= render 'layouts/error_messages', resource: @occupation %>
    <div class="row">
      <div class="col-lg-4">
        <%= f.text_field :name %>
        <%= f.submit "更新" %>
        <%= link_to "削除",  admin_occupation_path(@occupation.id), method: :delete, class: "btn-danger", data: {confirm: "本当に削除しますか？"} %>
      </div>
    </div>
  <%end%>

</div>
